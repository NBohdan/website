<% provide(:title, "Sign in") %>
<h1 style="font-family: comic sans ms; color: aqua">Sign in</h1>

<div class="row">
  <div class="span6 offset3"; style="font-family: comic sans ms; color: aqua">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>

    <p style="font-family: comic sans ms; color: aqua">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
