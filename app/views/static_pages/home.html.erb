<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>      
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>    
  </div>
<% else %>
  <div class="center hero-unit">
    <h1 style="font-family: comic sans ms; color: aqua" >Website</h1>
      <div style="font-family: comic sans ms; color: aqua">New user?</div>
    <%= link_to image_tag("digg_logo(1).png"), signup_path,
                                class: "btn-large" %>
  </div>
<% end %>